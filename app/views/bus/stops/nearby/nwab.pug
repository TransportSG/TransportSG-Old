extends ../../../layout

block head
    title Locate Nearby Bus Stops

block css
    link(rel='stylesheet' href='/static/bus/stops/nearby/nwab.css')
    link(rel='stylesheet' href='/static/bus/timings/search/search.css')
    link(rel='stylesheet' href='/static/bus/timings/stop.css')
    noscript
        link(rel='stylesheet' href='/static/bus/stops/nearby-nojs.css')

block scripts
    script(src='/static/bus/stops/nearby/nwab.js' async)

block header
    span#title Locate Nearby NWABs

block content
    div#loadingContainer
        div
            span.findingBusStops Finding Bus Stops
            p.currentStatus Waiting For Position
        div.spacer
        div
            div#spinner
    div#interactionContainer.hidden
        div#message
            span Your browser does not support JavaScript!
    div#resultContainer
