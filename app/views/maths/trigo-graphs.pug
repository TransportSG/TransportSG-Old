extends ../layout

block head
    title A Maths - Graphs Of Trigonometric Functions

block css
    link(rel='stylesheet' href='/static/maths/trigo-graphs.css')

block scripts
    script(src='/static/maths/trigo-graphs.js' async)

block header
    span#title Graphs Of Trigonometric Functions

block content
    div#eq
        span y = af(bx + c) + d
    div#function
        input#fName(value='sin')
    div#controls
        label(for='amp') a
        input#amp(type='range' min=-5 max=5 step=0.2)
        label(for='period') b
        input#period(type='range' min=-5 max=5 step=0.2)
        label(for='xoff') c
        input#xoff(type='range' min=-5 max=5 step=0.2)
        label(for='yoff') d
        input#yoff(type='range' min=-5 max=5 step=0.2)
    div#canvas-container
    canvas#canvas
